module LocalVariableDeclarations

imports

  MethodDeclarations
  FieldDeclarations
  Types
  Annotations

sorts

  LocalVarDecStm LocalVarDec

context-free syntax

  LocalVarDecStm.LocalVarDecStm = <<LocalVarDec> ;> {prefer}
  LocalVarDec.LocalVarDec = <<AnnoOrVarMod*> <Type> <{VarDec ","}+>> {prefer}
  AnnoOrVarMod = Anno
  AnnoOrVarMod = VarMod
